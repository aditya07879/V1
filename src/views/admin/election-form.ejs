<%- include('../partials/head', { title: election ? 'Edit Election' : 'Create Election' }) %>
<%- include('../partials/nav') %>

<main class="min-h-screen bg-bg py-16">
  <div class="max-w-4xl mx-auto px-6">

    <!-- PAGE TITLE -->
    <h1 class="text-white text-2xl font-semibold mb-8">
      <%= election ? 'Edit Election' : 'Create New Election' %>
    </h1>

    <!-- ================= STEP 1: ELECTION DETAILS ================= -->
    <form
      method="POST"
      action="<%= election ? '/api/elections/' + election._id : '/api/elections' %>"
      class="bg-card rounded-2xl p-6 mb-12 space-y-6"
    >

      <input
        name="title"
        placeholder="Election Title"
        value="<%= election ? election.title : '' %>"
        required
        class="w-full bg-bg border border-white/10 px-4 py-3 text-white rounded-md"
      />

      <textarea
        name="description"
        placeholder="Election Description"
        required
        class="w-full bg-bg border border-white/10 px-4 py-3 text-white rounded-md h-28"
      ><%= election ? election.description : '' %></textarea>

      <button
        type="submit"
        class="bg-accent px-6 py-3 rounded-md text-white hover:brightness-110 transition"
      >
        Save Election
      </button>
    </form>

    <!-- ================= VOTER KEY ================= -->
    <% if (election && election.voterKey) { %>
      <div class="bg-navy rounded-xl p-5 mb-12">
        <p class="text-white font-medium mb-2">Voter Access Key</p>
        <p class="text-accent text-lg font-mono select-all">
          <%= election.voterKey %>
        </p>
        <p class="text-red-400 text-sm mt-2">
          Store this key securely. It cannot be regenerated.
        </p>
      </div>
    <% } %>

    <!-- ================= STEP 2: CANDIDATES ================= -->
    <% if (election) { %>

      <section class="bg-card rounded-2xl p-6 mb-12">
        <h2 class="text-white font-semibold mb-4">Candidates</h2>

        <!-- ADD CANDIDATE FORM -->
        <form
          method="POST"
          action="/api/candidates/<%= election._id %>"
          enctype="multipart/form-data"
          class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6"
        >
          <input
            name="name"
            placeholder="Candidate Name"
            required
            class="bg-bg border border-white/10 px-4 py-3 text-white rounded-md md:col-span-2"
          />

          <input
            type="file"
            name="photo"
            accept="image/*"
            class="text-sm text-muted"
          />

          <button
            type="submit"
            class="bg-accent px-6 py-2 rounded-md text-white hover:brightness-110 transition md:col-span-3"
          >
            Add Candidate
          </button>
        </form>

        <!-- CANDIDATE LIST -->
       <!-- ================= CANDIDATES ================= -->
<% if (candidates && candidates.length) { %>
  <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">

    <% candidates.forEach(c => { %>
      <div class="relative bg-bg rounded-2xl p-6 text-center
                  hover:shadow-lg hover:shadow-black/40 transition group">

        <!-- IMAGE -->
        <img
          src="<%= c.photo %>"
          alt="<%= c.name %>"
          class="w-24 h-24 rounded-full mx-auto mb-4 object-cover
                 border border-white/10"
        />

        <!-- NAME -->
        <p class="text-white font-semibold tracking-wide">
          <%= c.name %>
        </p>

        <!-- ACTION BUTTONS -->
        <div class="mt-4 flex justify-center gap-4
                    opacity-0 group-hover:opacity-100 transition">

          <!-- EDIT TOGGLE -->
          <details class="text-left">
            <summary
              class="cursor-pointer text-blue-400 text-sm hover:text-blue-500">
              Edit
            </summary>

            <form
              method="POST"
              action="/api/candidates/<%= c._id %>?_method=PUT"
              enctype="multipart/form-data"
              class="mt-3 space-y-2"
            >
              <input
                name="name"
                placeholder="New name"
                class="w-full bg-card border border-white/10
                       px-3 py-2 rounded-md text-sm text-white"
              />

              <label
                class="block text-xs text-muted cursor-pointer">
                Change photo
                <input
                  type="file"
                  name="photo"
                  accept="image/*"
                  class="hidden"
                />
              </label>

              <button
                class="w-full bg-blue-500/20 text-blue-400
                       py-1.5 rounded-md text-sm hover:bg-blue-500/30">
                Save
              </button>
            </form>
          </details>

          <!-- DELETE -->
          <form
            method="POST"
            action="/api/candidates/<%= c._id %>?_method=DELETE"
            onsubmit="return confirm('Delete this candidate?')"
          >
            <button
              class="text-red-400 text-sm hover:text-red-500">
              Delete
            </button>
          </form>

        </div>
      </div>
    <% }) %>

  </div>
<% } else { %>
  <p class="text-muted text-sm">No candidates added yet.</p>
<% } %>


      <!-- ================= STEP 3: PUBLISH ================= -->
      <form
        method="POST"
        action="/admin/elections/<%= election._id %>/publish"
        class="text-right"
      >
        <button
          class="bg-green-600 hover:bg-green-700 px-6 py-3 rounded-md text-white font-medium"
        >
          Publish Election
        </button>
      </form>

    <% } else { %>

      <div class="bg-navy/40 border border-white/10 rounded-xl p-6">
        <p class="text-muted">
          Create the election first to add candidates.
        </p>
      </div>

    <% } %>

  </div>
</main>

<%- include('../partials/footer') %>
<%- include('../partials/script') %>
